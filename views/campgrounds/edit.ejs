<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align:center;">Edit <%=campground.name%></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name" value="<%= campground.name%>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price/night" name="price" min="0.01" step="0.01" value="<%= campground.price %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image-url" name="img" value="<%= campground.image%>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="desc" value="<%= campground.description%>">
                </div>
                
                <div class="form-group"> 
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>    
                </div>
                
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
            
    </div>
    

    
    
    
<% include ../partials/footer %>